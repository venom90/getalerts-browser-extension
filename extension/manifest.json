{
  "manifest_version": 2,
  "name": "react-webextension-boilerplate",
  "version": "1.0",

  "background": {
    "scripts": ["js/background.bundle.js"]
  },

  "browser_action": {
    "browser_style": true,
    "default_title": "React WebExtension Boilerplate",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },

  "permissions": ["activeTab"]
}
